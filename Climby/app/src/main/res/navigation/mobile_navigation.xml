<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.climby.climby.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/climbsRecycler"
        android:name="com.climby.climby.ClimbsRecycler"
        android:label="fragment_climbs_recycler"
        tools:layout="@layout/fragment_climbs_recycler" >
        <action
            android:id="@+id/action_climbsRecycler_to_climbDetailFragment"
            app:destination="@id/climbDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/routesRecycler"
        android:name="com.climby.climby.RoutesRecycler"
        android:label="fragment_routes_recycler"
        tools:layout="@layout/fragment_routes_recycler" >
        <action
            android:id="@+id/action_routesRecycler_to_routeDetailFragment"
            app:destination="@id/routeDetailFragment" />
        <action
            android:id="@+id/action_routesRecycler_to_newRouteFragment"
            app:destination="@id/newRouteFragment" />
    </fragment>
    <fragment
        android:id="@+id/routeDetailFragment"
        android:name="com.climby.climby.RouteDetailFragment"
        android:label="fragment_route_detail"
        tools:layout="@layout/fragment_route_detail" >
        <action
            android:id="@+id/action_routeDetailFragment_to_newClimbFragment"
            app:destination="@id/newClimbFragment" />
    </fragment>
    <fragment
        android:id="@+id/newRouteFragment"
        android:name="com.climby.climby.NewRouteFragment"
        android:label="fragment_new_route"
        tools:layout="@layout/fragment_new_route" />
    <fragment
        android:id="@+id/climbDetailFragment"
        android:name="com.climby.climby.ClimbDetailFragment"
        android:label="fragment_climb_detail"
        tools:layout="@layout/fragment_climb_detail" />
    <fragment
        android:id="@+id/newClimbFragment"
        android:name="com.climby.climby.NewClimbFragment"
        android:label="fragment_new_climb"
        tools:layout="@layout/fragment_new_climb" >
        <action
            android:id="@+id/action_newClimbFragment_to_climbsRecycler"
            app:destination="@id/routesRecycler" />
    </fragment>
</navigation>